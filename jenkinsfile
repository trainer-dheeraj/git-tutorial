pipeline {
    environment {
        registry = "trainerdheerajsharma/demoapp"
        registryCredential = 'docker'
        dockerImage = '' 
    }
    agent any
    
    tools {nodejs "node"}

    stages {
        
        stage('Clone') {
            steps {
                git branch: 'firstbranch', url: 'https://github.com/trainer-dheeraj/git-tutorial'
            }
        }
        stage('Install') {
            steps {
                bat 'npm install'
            }
        }
        stage('test') {
            steps {
                bat 'npm test'
            }
        }   
        stage('Building image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }
            }
        }
          
        stage('Deploy') {
            steps {
                echo 'The software will now be deployed!'
            }
        }
    }    
}
